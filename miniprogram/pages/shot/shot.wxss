.main{
  display: flex;
  justify-content: center;
  align-items: center;
  height:450px;
 
}
.btn{
 
 width:60%;
  height: 53%;
  
}
#camara{
  display: flex;
  justify-content: center;
  align-items: center;
  width:60%;
  height:50%;
  border-radius: 100%;
  border:5px solid rgba(65, 173, 65, 0.685)

}
.tips{
  display: flex;
  justify-content: center;
  flex-direction: row;
  font-size: 20px;
  font-family:"Arial";
  text-align: center;
}

.modal-dialog {
  position: fixed;
  top: 30%;
  left: 20%;
  z-index: 9999;
  background: #f9f9f9;
  width:60%;
  border-radius: 2%;
}

.modal-title {
  padding-top: 5%;
  padding-bottom: 5%;
  font-size: 13px;
  color: black;
  text-align: center;
  font-weight: bold;
  font-family:"Arial";
}

.modal-content {
  margin-left:8%;
  margin-right:8%;
  margin-top:6%;
  margin-bottom:6%;
  
  font-family:"Arial";
}
.dish{
  padding-top:4%;
  padding-bottom:4%;
  text-align: center;
  font-family:"Arial";


}
.dish1{
  display: flex;
  flex-direction: row;
  padding-top:4%;
  padding-bottom:4%;
  text-align: left;
  font-family:"Arial";
  align-items: center;
}
.btn-cancel {
  width: 100%;
  color: black;
  text-align: center;
  font-size:12px;
  border-right: 1px solid #cdcdcd;
  padding-top:5%;
  padding-bottom:5%;
  font-family:"Arial";
}



.modal-footer {
  display: flex;
  flex-direction: row;
  border-top: 1px solid #cdcdcd;
  font-size: 12px;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.txt{
  padding-right:4%;
  font-size:12px;
  font-family: "Arial";
}
.input{
  width:20%;
 border:1px solid #ccc;
  background-color:rgb(238, 238, 238);
  border-radius: 4px;
  margin-right:5%;
  font-size:12px;
}