<!--pages/my/my.wxml-->
<view class="userinfo">
  <view class="userinfo-avatar">
    <open-data  type="userAvatarUrl"></open-data>
  </view>
    <open-data type="userNickName"></open-data>
</view>

<view class="container">
  <view class="result">
    <view class="title">BMI值</view>
    <view class="bmi">{{bmi}}</view>
    </view>
  <view class="input-container">
    <view class="item">
      <text class="label">身高</text>
      <text class="unit">cm</text>
      <input type="digit" value='{{inputHeight}}' bindinput="bindKeyHightInput" maxlength="6" class="" />
    </view>
    <view class="item">
      <text class="label">体重</text>
      <text class="unit">kg</text>
      <input type="digit" value='{{inputWeight}}' bindinput="bindKeyWeightInput" maxlength="6" class="" />
    </view>
    <button class="calcu_btn" bindtap="calculateBtn">确认数据</button>
  </view>
</view>

<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="analysis">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/basics{{PageCur=='analysis'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='analysis'?'text-green':'text-gray'}}">数据</view>
  </view>
  <view class="action add-action" bindtap="NavChange" data-cur="shot">
    <button class="cu-btn cuIcon-add bg-green shadow"></button>
      上传
  </view>
  <view class="action" bindtap="NavChange" data-cur="my">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/about{{PageCur=='my'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='my'?'text-green':'text-gray'}}">我的</view>
  </view>
</view>
